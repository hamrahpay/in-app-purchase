<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lime_colorPrimaryDark"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_awaiting"
            android:src="@drawable/ic_action_lock_closed"/>
        <TextView
            android:id="@+id/url_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:textColor="@color/lime_textColorPrimary"
            android:background="@color/lime_colorPrimaryDark"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="http://"/>
    </LinearLayout>

    <WebView
        android:id="@+id/pay_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
